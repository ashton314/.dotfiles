#!/bin/zsh

# This file is for relatively portable configurations on top of what I do in my .zshrc

# Enable 24-bit color (see https://stackoverflow.com/questions/14672875/true-color-24-bit-in-terminal-emacs)

TERM=xterm-24bit; export TERM
EMACS="*term*";   export EMACS
EDITOR=emacs;     export EDITOR
PAGER=less;       export PAGER
LESS=-RFiX;       export LESS

# PS1="%(?:%{$fg[green]%}➜ :%{$fg[red]%}➜ )%{$fg[cyan]%}%~%{$reset_color%} \$(git_prompt_info)"; export PS1


##############################
# Aliases
##############################

alias ll='ls -AlFG'
alias l='ls -lahF'
alias 'notebook'='emacs --eval "(progn (setq deft-directory \".\") (deft))"'
#alias 'sj'='cd ~/Wiersdorf/study_journal/; notebook'
alias 'emacs'='/usr/local/opt/gccemacs/bin/emacs'
alias 'e'='/usr/local/opt/gccemacs/bin/emacsclient -nw --alternate-editor= '
alias 'ce'='carton exec'
alias 'j'='jobs -l'
alias 'whoamip'='ipconfig getifaddr en0'
alias 'r~'='rm -f *~ .*~'

# init asdf
. $(brew --prefix asdf)/asdf.sh


# Run aliases
if [[ -r ~/.bash_aliases ]]; then
    . ~/.bash_aliases
fi

# Setup direnv
export XDG_DATA_HOME=/Users/ashton/.config
eval "$(direnv hook zsh)"
